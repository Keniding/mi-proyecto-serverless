{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": ".build",
    "rootDir": "./",
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "serverless.ts"],
  "exclude": ["node_modules/**/*", ".serverless/**/*", ".build/**/*"]
}
